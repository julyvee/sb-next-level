<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight(%5level) %magenta(${PID}) --- [%15.15thread] %cyan(%-40.40logger{40}) : %msg %n</pattern>
            <!--<pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight(%5level) %magenta(${PID}) - [%15.15thread] %cyan(%-40.40logger{40}) : %msg - %green(%X{REQ_ID}) %n</pattern>-->
        </encoder>
    </appender>

    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>